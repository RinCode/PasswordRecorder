<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/sitelab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="网址："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/site"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/maillab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邮箱："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/unamelab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/uname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </TableRow>
        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/upasslab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/upass"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </TableRow>
        <TableRow android:gravity="center">

            <TextView
                android:id="@+id/otherlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="备注："
                android:textSize="18sp" />

            <EditText
                android:id="@+id/other"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </TableRow>

        <TableRow android:gravity="center">

            <TextView
                android:visibility="gone"
                android:id="@+id/seedlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="秘钥："
                android:textSize="18sp" />

            <EditText
                android:visibility="gone"
                android:id="@+id/seed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:singleLine="true" />
        </TableRow>
        <TableRow android:gravity="center">
            <Button
                android:id="@+id/edititem"
                android:text="修改"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/deleteitem"
                android:text="删除"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/submitedit"
                android:text="提交"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
</LinearLayout>